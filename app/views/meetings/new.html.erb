<%= render "shared/header" %>
<main>
<div class="meetings row">
  <div class="meeting-new">
    <h1>打ち合わせ情報新規登録</h1>
      <%= form_with model: @meeting, url: temporary_meetings_path(@temporary.id),local: true do |f| %>
       <%= render 'shared/error_messages',model: f.object %> 
    <div class = "field">
      <label class="form-text">企業名</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_field :company_name, class:"text_box", id:"company-name", placeholder:"(株)〇〇"%>
    <div class='field'>
      <label class="form-text">日程</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :date,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    default: Date.today,
                    start_year: (Time.now.year - 5),
                    end_year: (Time.now.year + 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
    <div class='field'>
      <label class="form-text">時間</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.time_select(
                    :time,
                    class:'select-birth',
                    id:"birth-date",
                    prompt:'--',
                    ignore_data:true,
                    time_separator: '%s'),
                  "<p> 時 </p>" ) + "<p> 分 </p>"%>
    </div>
    <%= f.submit "新規作成" ,class: "submit_button"%>
    <% end %>
  </div>
  <div>
  <h1 class = "calendar_title"><%= @temporary.full_name + "　打ち合わせ予定"%></h1>
  <div class=calendar>
    <%= render partial: 'day', collection: @week_days %>
  </div>
  </div>
</div>
</main>
<%= render "shared/footer" %>